<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="80px"
        app:cardPreventCornerOverlap="true"
        android:background="@drawable/bg_journal_list"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/articlesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#573926"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/articlesDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineHeight="18dp"
                android:text=""
                android:textColor="#573926"
                android:textSize="14sp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/articlesCardView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="50px"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:id="@+id/articlesImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Your CardView content goes here, e.g., an ImageView or other views -->

    </androidx.cardview.widget.CardView>

</LinearLayout>