<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="10dp"
    app:cardCornerRadius="80px"
    app:cardPreventCornerOverlap="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/sessionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sessionImage"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            app:shapeAppearanceOverlay="@style/curved"
            android:background="@drawable/nav_you"
            />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sessionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#573926"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sessionExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineHeight="18dp"
                android:text="X+ years of Experience"
                android:textColor="#573926"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sessionFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineHeight="18dp"
                android:text="Starts @xxx for X Minutes"
                android:textColor="#573926"
                android:textSize="16sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/sessionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text=""
            android:textColor="#573926"
            android:textSize="14dp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sessionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineHeight="18dp"
                android:text="Depression | Anxiety"
                android:textColor="#573926"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sessionLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineHeight="18dp"
                android:text="English | Hindi | Punjabi"
                android:textColor="#573926"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book_slot"
            android:layout_marginEnd="18dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_rounded"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/btn_paddingTop"
            android:paddingBottom="@dimen/btn_paddingBottom"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/btn_text_size"
             />

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>